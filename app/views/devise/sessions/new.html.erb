  <div class="container">

      <!-- Outer Row -->
      <div class="row justify-content-center">

          <div class="col-xl-10 col-lg-12 col-md-9">

              <div class="card o-hidden border-0 shadow-lg my-5">
                  <div class="card-body p-0">
                      <!-- Nested Row within Card Body -->
                      <div class="row">
                          <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                          
                          <div class="col-lg-6">
                              <div class="p-5">
                                  <div class="text-center">
                                      <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                  </div>
                                  
                                    <%= form_for(resource, as: resource_name, class: 'user', url: session_path(resource_name)) do |f| %>
                                      <div class="form-group">
                                          <%= f.email_field :email, class: 'form-control form-control-user', autofocus: true, autocomplete: "email", placeholder:'Enter Email Address...' %>
                                      </div>
                                      <div class="form-group">
                                          <%= f.password_field :password, class:'form-control form-control-user', autocomplete: "current-password", placeholder:'Password' %>
                                      </div>
                                      <div class="form-group">
                                              <% if devise_mapping.rememberable? %>
                                                <div class="field">
                                                  <%= f.check_box :remember_me %>
                                                  <%= f.label :remember_me %>
                                                </div>
                                              <% end %>
                                      </div>
                                      <%= f.submit "Log in", class: 'btn btn-primary btn-user btn-block' %>
                                      <hr>
                                      <a href="index.html" class="btn btn-google btn-user btn-block">
                                          <i class="fab fa-google fa-fw"></i> Login with Google
                                      </a>
                                      <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                          <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                      </a>
                                  <% end %>
                                  <hr>
                                  <div class="text-center">
                                    <%= link_to 'Forgot Password?', new_user_password_path, class: 'small' %>
                                  </div>
                                  <div class="text-center">
                                    <%= link_to 'Already have an account? Login', new_user_session_path, class: 'small' %>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </div>

          </div>

      </div>

  </div>




